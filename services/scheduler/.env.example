# Scheduler Service Configuration

# Service
SCHEDULER_SERVICE_NAME=sis-scheduler
SCHEDULER_DEBUG=false
SCHEDULER_LOG_LEVEL=INFO

# Database
SCHEDULER_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sis
SCHEDULER_DB_POOL_SIZE=5
SCHEDULER_DB_MAX_OVERFLOW=10

# Redis (for job queue)
SCHEDULER_REDIS_URL=redis://localhost:6379/1

# API
SCHEDULER_API_HOST=0.0.0.0
SCHEDULER_API_PORT=8080
SCHEDULER_API_WORKERS=1

# Solver defaults
SCHEDULER_SOLVER_TIME_LIMIT_SECONDS=300
SCHEDULER_SOLVER_NUM_WORKERS=4
SCHEDULER_SOLVER_LOG_SEARCH_PROGRESS=false

# Callback URL for notifying main app
SCHEDULER_CALLBACK_BASE_URL=http://localhost:3000/api/trpc
